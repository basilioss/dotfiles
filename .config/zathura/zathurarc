# Copy to clipboard
set selection-clipboard clipboard

# Dark mode by default
set recolor
# Dark colors
set recolor-lightcolor "#151f29"
# Background color
set default-bg "#151f29"

# Statusbar colors
set statusbar-bg "#151f29"
set inputbar-bg "#2B3D4F"
set inputbar-fg "#FFFFFF"

# Index mode colors (tab)
set index-bg "#151f29"
set index-fg "#FFFFFF"
set index-active-bg "#2B3D4F"
set index-active-fg "#FFFFFF"

# Selection, follow links colors
set highlight-color "#5fafff"
set highlight-fg "#ff6059"

# Completition
set completion-bg "#151f29"
set completion-group-bg "#2B3D4F"
set completion-highlight-bg "#415976"
set completion-highlight-fg "#DEDEDE"
