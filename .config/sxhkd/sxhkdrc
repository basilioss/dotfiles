# Launch apps
super + o ; {t,f,m,k,n}
    {telegram-desktop,firefox,deadbeef,keepmenu,networkmanager_dmenu}

super + o ; {o,c,w}
    {ocr,callendar-notify,restart-warp}

super + o ; shift + {t,o}
    {thunar,obs}

super + {shift+p,grave,x,shift+x}
    {dmenu-powermenu,emoji-menu,dmenu-kill,xkill}

alt + space
    dmenu-recent-aliases

super + o ; d
    $BROWSER https://discord.com/login

super + o ; e
    espanso cmd search

# st with tabs
super + o ; Return
    tabbed -c -r 2 st -w ""

# Open link with mpv
super + o ; v
    st mpv $(xclip -o -sel clip)

# Colorpicker
super + o ; shift + f
    farge --notify --expire-time 5000

# Screenshot
Print
    screenshot

# Select area, copy to clipboard, edit last screenshot
{alt,shift,super} + Print
    screenshot {-s,-c,-e}

# Clipboard
super + v
    clipmenu -i && xdotool key shift+Insert

# Lock
super + l
    betterlockscreen -l

# Close all notifications
super + BackSpace
    dunstctl close-all 

# Show previous notification
super + shift + BackSpace
    dunstctl history-pop

# Layout
super + space
    xkblayout-state set +1 && dunstify -r 2593 "$(xkblayout-state print "Current layout: %n")"

# Toggle blue light
alt + KP_End
    [ -z "$(pgrep redshift)" ] && redshift -l 50:30 || killall redshift

# Turn off screen
XF86ScreenSaver
    xset dpms force off

# Volume control
XF86Audio{Mute,LowerVolume,RaiseVolume}
    volume-control {mute,down,up}

# Brightness
XF86MonBrightness{Up,Down}
    brightness-control {up,down}

# Audio player
XF86Audio{Next,Prev,Stop,Play}
	deadbeef {--next,--prev,--stop,--play-pause}
