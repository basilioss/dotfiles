#!/bin/sh
#
# Description: Print current volume or 婢 if muted.
# Dependencies: pamixer, Nerd font for icons
# Github: https://github.com/basilioss/dotfiles

[ $(pamixer --get-mute) = true ] && echo 婢 && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "80" ]; then
	icon=" "
elif [ "$vol" -gt "50" ]; then
	icon="墳 "
elif [ "$vol" -gt "25" ]; then
	icon="奔 "
elif [ "$vol" -gt "0" ]; then
	icon="奄 "
else
        echo 婢 && exit
fi

echo "$icon$vol%"
