#!/bin/sh
#
# Description: Print current layout and an icon
# Dependencies: xkblayout-state, Nerd font for an icon
# Github: https://github.com/basilioss/dotfiles

lang="$(xkblayout-state print %s)"

if [ "$lang" = "us" ]; then
    echo " US"
elif [ "$lang" = "ru" ]; then
     echo " RU"
elif [ "$lang" = "ua" ]; then
    echo " UA"
fi
